<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textViewAccount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="19dp"
        android:text="@string/acount1" />

    <EditText
        android:id="@+id/editTextAccount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAccount1"
        android:layout_below="@+id/textViewAccount1"
        android:layout_marginTop="14dp"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/textViewAccount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAccount1"
        android:layout_below="@+id/editTextAccount1"
        android:layout_marginTop="30dp"
        android:text="@string/acount2" />

    <EditText
        android:id="@+id/editTextAccount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAccount2"
        android:layout_below="@+id/textViewAccount2"
        android:layout_marginTop="20dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAccount2"
        android:layout_below="@+id/editTextAccount2"
        android:layout_marginTop="30dp"
        android:text="@string/total" />

    <EditText
        android:id="@+id/editTextTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTotal"
        android:layout_below="@+id/textViewTotal"
        android:layout_marginTop="20dp"
        android:ems="10" />

    <Button
        android:id="@+id/buttonAction"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextTotal"
        android:layout_below="@+id/editTextTotal"
        android:layout_marginTop="35dp"
        android:text="@string/button_start" />

</RelativeLayout>
